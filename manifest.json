{
  "manifest_version": 3,
  "name": "Gmail AI Summarizer",
  "version": "1.0",
  "description": "Summarize Gmail emails using AI",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://mail.google.com/"],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ]
}

