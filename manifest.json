{
  "manifest_version": 3,
  "name": "Gmail AI Summarizer",
  "version": "1.0",
  "description": "Summarizes Gmail emails using AI",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}